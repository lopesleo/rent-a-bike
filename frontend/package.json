{
    "name": "frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "prettier": "prettier --write .",
        "prettier:check": "prettier --check .",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
        "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx --fix-dry-run",
        "e2e": "pnpm db && playwright test",
        "db:e": "docker exec -i rentabike-db mariadb -u root -proot < ../backend/src/Database/rent-a-bike.sql",
        "db:seed": "docker exec -i rentabike-db mariadb -u root -proot < ../backend/src/Database/db_mock.sql",
        "db:locacao": "docker exec -i rentabike-db mariadb -u root -proot < ../backend/src/Database/db_locacao_mock.sql",
        "db": "pnpm db:e && pnpm db:seed",
        "e2e:ui": "playwright test --ui",
        "test": "vitest run --dir test",
        "test:ui": "vitest --ui --dir test",
        "test:watch": "vitest --dir test --watch",
        "test:coverage": "vitest  --dir test --coverage",
        "server": "json-server --watch api.json --port 3000"
    },
    "devDependencies": {
        "@playwright/test": "^1.52.0",
        "@types/bootstrap": "^5.2.10",
        "@types/node": "^22.15.21",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "@vitest/coverage-v8": "3.1.1",
        "@vitest/ui": "3.1.1",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "jsdom": "^26.1.0",
        "playwright": "^1.52.0",
        "prettier": "^3.5.3",
        "typescript": "~5.7.2",
        "vite": "^6.3.1",
        "vitest": "^3.1.1"
    },
    "dependencies": {
        "bootstrap": "^5.3.5",
        "chart.js": "^4.5.0",
        "json-server": "1.0.0-beta.3"
    }
}
